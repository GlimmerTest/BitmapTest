<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33FF83FA">

    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_hellokitty" />

    <Button
        android:id="@+id/btn_wanzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是丸子"
        android:textColor="#FF83FA"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_wanzi"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/add_by_chetwyn" />

    <Button
        android:id="@+id/btn_show_tip"
        android:layout_below="@id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_tip_toast" />


</RelativeLayout>
